<div class = "form-container">
    
        
    <h2>ログイン</h2>
     
    <%= form_tag("/login") do %> 
    <%if @error_message %>
      <div class="error_message">
          <%= @error_message%>
      </div>
    <% end %>
    
     <div class = "workspace">
         
        <p>メールアドレス</p>
        <input type = "text" name = "mail" value = "<%= @mail %>"><br>
        
        <p>パスワード</p>
        <input type = "string" name = "password"><br>
        <input type = "submit" valie = "ログイン"><br>

     </div>
    <%end%>
    
</div>