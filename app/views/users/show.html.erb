<div class="all-wrapper">
  
    <div class="left-container">
        <img src="<%= "/assets/user_images/#{@user.image_name}" %>">
        <h3><%= @user.name %></h3>
        <%= link_to("ユーザー情報編集","/users/#{@user.id}/edit") %>
    </div>
    
    <div class="main-container">
        
        <div class="post-index">
          投稿一覧
          <% @posts.each do |post| %>
            <div class = "user-posted">
              <%= link_to(post.title,"/posts/#{post.id}") %>
              <%= post.created_at %>
              <i class="fa fa-thumbs-o-up"></i><%= @likes_count = Like.where(post_id: post.id).count %>
            </div>
          <% end %>
          <%= paginate @posts %>
        </div>
        
        <div class="post-index">
          いいねした一覧
          <% @likes.each do |like| %>
          <% @post = Post.find_by(id: like.post_id) %>
            <div class = "user-posted">
              <%= link_to(@post.title,"/posts/#{@post.id}") %>
              <%= @post.created_at %>
              <i class="fa fa-thumbs-o-up"></i><%= @likes_count = Like.where(post_id: @post.id).count %>
            </div>
          
          <% end %>
        </div>
    </div>
    
    
</div>
